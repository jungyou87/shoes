<div class="row">
    <div class="col-2">
        Hi <%= @user.first_name %>
    </div>
    <div class="col-6"></div>
    <div class="col-4">
        <a href="/shoes"> Go to All Products </a> &nbsp; <a href="/logout" data-method="delete">Logout</a>
    </div>
</div>

<div class="row">
    <div class="col-1"></div>
    <div class="col-3"><h5>Sell Product</h5></div>
    <div class="col-4">
        <form action="/shoes" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

            <div class="form-group">
                    <label for="product">Name:</label>
                    <input type="text" name="shoe[product]" id="product" class="form-control">
            </div>

            <div class="form-group">
                <label for="amount">Amount:</label>
                <input type="number" name="shoe[amount]" id="amount" class="form-control" minimum="0.01" placeholder="$0.00" step="0.01">
            </div>

            <button type=submit class="btn btn-primary">Sell</button>

        </form>
    </div>

</div>
        
<hr>

<!-- NOT SOLD SHOES -->
<h6>You products that are not yet sold:</h6>
<div>
    <table class=table>
        <thead>
        <tr>
            <th>Product</th>
            <th>Date Posted</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
            <% @user.shoes.each do |shoe| %>
            <tr>
                <td> <%= shoe.product %> </td>
                <td> <%= shoe.created_at %> </td>
                <td> $<%= shoe.amount %> </td>
                <td> <a href="/shoes/<%= shoe.id %>" data-method="delete">Remove</a></td>
            </tr>
            <% end %>
        </tbody>

    </table>
</div>

<!-- SOLD SHOES -->
<h6>Sales</h6>
<div>
    <table class=table>
        <thead>
        <tr>
            <th>Product</th>
            <th>Date Bought</th>
            <th>Buyer</th>
            <th>Amount</th>
        </tr>
        </thead>
        <tbody>
            <%  %>
            <tr>
                <td> <%=  %></td>
                <td> <%=  %></td>
                <td> <%=  %> <%=  %></td>
                <td> <%=  %></td>
            </tr>
            <%  %>
        </tbody>

    </table>
</div>

<!-- BOUGHT SHOES -->
<h6>Purchases</h6>
<div>
    <table class=table>
        <thead>
        <tr>
            <th>Product</th>
            <th>Date Bought</th>
            <th>Seller</th>
            <th>Amount</th>
        </tr>
        </thead>
        <tbody>
            <% @user.buying_shoes.each do |shoe| %>
            <tr>
                <td><%= shoe.product %></td>
                <td><%= shoe.created_at %></td>
                <td><%= shoe.user.first_name %></td>
                <td>$<%= shoe.amount %></td>
            </tr>
            <% end %>
        </tbody>

    </table>
</div>